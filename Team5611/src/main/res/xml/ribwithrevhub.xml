<Robot type="FirstInspires-FTC" name="RIB with Rev Hub">
    <MotorController name="Motor Controller 1" serialNumber="AH03ETQH">
        <NeveRest40Gearmotor name="leftFrontWheel" port="1" />
        <NeveRest40Gearmotor name="rightFrontWheel" port="2" />
    </MotorController>
    <MotorController name="Motor Controller 2" serialNumber="AH03ETUV">
        <NeveRest40Gearmotor name="leftRearWheel" port="1" />
        <NeveRest40Gearmotor name="rightRearWheel" port="2" />
    </MotorController>
    <MotorController name="Motor Controller 3" serialNumber="AH03ETU9">
    </MotorController>
    <MotorController name="Motor Controller 4" serialNumber="AH03ETUA">
    </MotorController>
    <ServoController name="Servo Controller 1" serialNumber="AI049L9E">
        <Servo name="" port="1" />
    </ServoController>
    <DeviceInterfaceModule name="Device Interface Module 1" serialNumber="AI02RLBT">
    </DeviceInterfaceModule>
    <LynxUsbDevice name="Expansion Hub Portal 1" serialNumber="DQ1NV38L" parentModuleAddress="2">
        <LynxModule name="Expansion Hub 2" port="2">
            <RevRoboticsHDHexMotor name="motor0" port="0" />
            <NeveRest40Gearmotor name="motor3" port="3" />
            <DigitalDevice name="touchSensor" port="1" />
            <LynxColorSensor name="colorRangeSensor" port="0" bus="3" />
            <LynxEmbeddedIMU name="imu" port="0" bus="0" />
        </LynxModule>
    </LynxUsbDevice>
</Robot>
